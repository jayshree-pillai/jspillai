src/
  prompts/                              # prompt subsystem (self-contained)
    config/                             # YAML control plane
      sections/                         # section recipes (what runs, order, versions)
        company_overview/
          default.yaml                  # default version pointer
          v1.yaml                       # recipe: components + overrides
      components/                       # reusable component configs (intent + steps)
        operating_performance_snapshot.yaml
        business_model.yaml
      retrieval.yaml                    # all retrieval profiles (financials_mda, risk_factors, ...)
      kpis.yaml                         # KPI packs (performance_core, liquidity_core, ...)
      policies.yaml                     # global rules/gates (citations, not disclosed, etc.)
      models.yaml                       # LLM runtime config (single model ok, per-step params)

    assets/                             # prompt text (.md)
      extract.md                        # step template
      compose.md                        # step template
      verify.md                         # step template
      blocks/                           # reusable prompt blocks
        system.md
        citations.md
        not_disclosed.md
        style.md

    engine/                             # lifecycle runtime (KISS files)
      compile.py                        # pick section version + expand to component plan
      fetch.py                          # fetch chunks via retrieval profile + KPIs
      build.py                          # hydrate templates with rules + context
      validate.py                       # gates: schema/citations/numerics
      execute.py                        # run steps sequentially per component

    schemas/                            # Pydantic contracts (rename from models to avoid confusion)
      plan.py                           # PromptPlan
      bundle.py                         # PromptBundle
      result.py                         # Results (step/component/section)
      gate.py                           # GateResult
      provenance.py                     # Evidence/citation mapping
